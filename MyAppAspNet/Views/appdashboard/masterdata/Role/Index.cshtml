@model IEnumerable<MyAppAspNet.Models.Roles>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<p>
    @Html.Partial("~/Views/Shared/action/add-button.cshtml", "Create New")
</p>
<div style="overflow: auto;">
    <table class="table">
        <tr>
            <th>
               Name
            </th>
            <th>
                Note
            </th>
            <th>
                Url
            </th>
            <th>
                Controller
            </th>
            <th>
               View
            </th>
            <th>
               Add
            </th>
            <th>
               Edit
            </th>
            <th>
               Delete
            </th>
            <th>
               Print
            </th>
            <th>
               Custom
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.url)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.controller)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccessView)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccessAdd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccessEdit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccessDelete)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccessPrint)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccessCustom)
                </td>
                <td nowrap>
                    @Html.Partial("~/Views/Shared/action/edit-button.cshtml", item.id) | 
                    @Html.Partial("~/Views/Shared/action/delete-button.cshtml", item.id)
                </td>
            </tr>
        }

    </table>
</div>
